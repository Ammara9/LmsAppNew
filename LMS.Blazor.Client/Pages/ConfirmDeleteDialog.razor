@code {
    [Parameter]
    public string Title { get; set; } = "Confirm Deletion";

    [Parameter]
    public string Message { get; set; } = "Are you sure you want to delete this item?";

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    private bool IsVisible { get; set; }

    public void Show()
    {
        IsVisible = true;
        StateHasChanged();
    }

    private async Task Close(bool confirmed)
    {
        IsVisible = false;
        await OnClose.InvokeAsync(confirmed);
    }
}
